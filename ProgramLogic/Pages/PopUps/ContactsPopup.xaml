            Margin="0,10,0,10"
            LineBreakMode="WordWrap"
            HorizontalTextAlignment="Center"
            FontSize="20"
            TextColor="AliceBlue"
            Text="Email:&#10;yatsiks69@gmail.com&#10;Telegram: @Trap_o"/>
        <Button
            Text="OK"
            BackgroundColor="#EE6352"
            Margin="0,20,0,10"
            HorizontalOptions="Center"
            Padding="70,0"
            CornerRadius="20"
            FontSize="20"
            FontAttributes="Bold"
            TextColor="AliceBlue"
            Clicked="OnOKButtonClicked" />
    </VerticalStackLayout>
    
</toolkit:Popup>
