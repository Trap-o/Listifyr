<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Listifyr.ProgramLogic.Pages.NestedPages.SearchPage"
             Title="Search">

    <StackLayout Padding="10" BackgroundColor="#0F0606">
        <SearchBar Placeholder="Enter the movie title"
               TextChanged="OnSearchTextChanged" TextColor="AliceBlue" CancelButtonColor="AliceBlue" FontSize="Title"/>
        <ListView x:Name="ItemsListView" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding Poster}" HeightRequest="50" Margin="5, 0"/>
                            <StackLayout>
                                <Label Text="{Binding ItemName}" TextColor="AliceBlue" FontSize="18" LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding Release_Date}" TextColor="AliceBlue" FontSize="14"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>